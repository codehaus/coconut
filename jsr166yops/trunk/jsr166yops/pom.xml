<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.codehaus.cake.jsr166y</groupId>
    <artifactId>jsr166y-parent</artifactId>
    <version>0.1</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <artifactId>jsr166yops</artifactId>
  <name>Jsr166yops</name>
  <version>0.1-SNAPSHOT</version>
  <packaging>jar</packaging>
  <distributionManagement>
    <site>
      <id>codehaus.org</id>
      <url>dav:https://dav.codehaus.org/cake/cake-jsr166y</url>
    </site>
  </distributionManagement>
  <dependencies>
    <dependency>
      <groupId>org.codehaus.cake.jsr166y</groupId>
      <artifactId>jsr166y</artifactId>
      <version>0.1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.codehaus.cake.test</groupId>
      <artifactId>cake-testutil</artifactId>
      <version>0.1-SNAPSHOT</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <links>
            <link>http://java.sun.com/j2se/1.5.0/docs/api</link>
            <link>http://gee.cs.oswego.edu/dl/jsr166/dist/jsr166ydocs/</link>
          </links>
          <showPackage>false</showPackage>
          <showProtected>true</showProtected>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-clover-plugin</artifactId>
        <groupId>com.atlassian.maven.plugins</groupId>
        <version>3.6</version>
        <configuration>
          <licenseLocation>${clover.licenseLocation}</licenseLocation>
          <useSurefireTestResults>true</useSurefireTestResults>
          <!--  <contextFilters>private \w+\s*\(.*</contextFilters> -->
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>