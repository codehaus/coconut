<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.codehaus.cake</groupId>
    <artifactId>cake-parent</artifactId>
    <version>0.1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <groupId>org.codehaus.cake.service</groupId>
  <artifactId>cake-service-parent</artifactId>
  <name>Cake Service (pom)</name>
  <description>Root Pom for Cake Service</description>
  <packaging>pom</packaging>
  <dependencies>
    <dependency>
      <groupId>org.codehaus.cake</groupId>
      <artifactId>cake-core</artifactId>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <id>run-no-clover</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>cake-service-api</module>
        <module>cake-service-impl</module>
        <module>cake-service-tck</module>
      </modules>
    </profile>
    <profile>
      <id>release</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <modules>
        <module>cake-service-api</module>
        <module>cake-service-impl</module>
        <module>cake-service-tck</module>
      </modules>
    </profile>
    <profile>
      <id>run-clover</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>clover</name>
        </property>
      </activation>
      <modules>
        <module>cake-service-api</module>
        <module>cake-service-impl</module>
      </modules>
    </profile>
  </profiles>
</project>